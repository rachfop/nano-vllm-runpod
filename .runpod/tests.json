{
  "tests": [
    {
      "name": "basic_inference_test",
      "input": {
        "prompt": "Write a short poem about artificial intelligence.",
        "max_tokens": 64,
        "temperature": 0.7
      },
      "timeout": 30000
    },
    {
      "name": "openai_format_test",
      "input": {
        "prompt": "Answer in one concise sentence: What is a neural network?",
        "openai_route": true,
        "max_tokens": 32,
        "temperature": 0.2
      },
      "timeout": 30000
    },
    {
      "name": "streaming_test",
      "input": {
        "prompt": "Count from one to five.",
        "stream": true,
        "max_tokens": 16,
        "temperature": 0.0
      },
      "timeout": 30000
    }
  ],
  "config": {
    "gpuTypeId": "NVIDIA GeForce RTX 4090",
    "gpuCount": 1,
    "env": [
      {
        "key": "MODEL_NAME",
        "value": "Qwen/Qwen3-8B"
      }
    ],
    "allowedCudaVersions": [
      "12.9",
      "12.8",
      "12.7",
      "12.6",
      "12.5",
      "12.4",
      "12.3",
      "12.2",
      "12.1"
    ]
  }
}
